<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertData">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl0"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/InsertHeader"
            android:text="INSERT YOUR DATA !"
            android:textSize="22sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:gravity="center"
            android:fontFamily="@font/fira_mono_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl0"
        android:id="@+id/rl1"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/UserImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user1"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000">
        </de.hdodenhof.circleimageview.CircleImageView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserImg"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:id="@+id/BrowseButton"
            android:text="Browse">
        </Button>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl1"
        android:id="@+id/rl2"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TextName"
            android:text="Enter Name : "
            android:fontFamily="@font/fira_mono_medium"
            android:textSize="17dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:paddingLeft="10sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:paddingStart="8dp"
            android:inputType="textPersonName"
            android:background="@drawable/layerlist"
            android:id="@+id/EditName">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl2"
        android:paddingTop="15dp"
        android:id="@+id/rl3"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TextCourse"
            android:text="Enter Course : "
            android:textSize="17dp"
            android:textStyle="normal"
            android:fontFamily="@font/fira_mono_medium"
            android:textColor="@color/black"
            android:paddingLeft="10sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:paddingStart="8dp"
            android:background="@drawable/layerlist"
            android:id="@+id/EditCourse">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl3"
        android:id="@+id/rl4"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TextEmail"
            android:fontFamily="@font/fira_mono_medium"
            android:text="Enter Email : "
            android:textSize="17dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:paddingLeft="10sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <EditText
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:paddingStart="8dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/layerlist"
            android:id="@+id/EditEmail">

        </EditText>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:paddingTop="32dp"
        android:layout_below="@+id/rl4"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#FFA3A3"
            android:fontFamily="@font/fira_mono_medium"
            android:textColor="@color/white"
            android:id="@+id/InsertButton"
            android:text="Insert ðŸ–¤ ">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/InsertButton"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#0B8DFF"
            android:fontFamily="@font/fira_mono_medium"
            android:textColor="@color/white"
            android:id="@+id/ShowInsertData"
            android:text="Show data ">
        </Button>

    </RelativeLayout>

</RelativeLayout>